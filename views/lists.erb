<ul id="lists">
<% sorted_lists(@lists) do |list, id| %>
  <li class="<%= list_class(list) %>">
    <a href="/lists/<%= id %>">
      <h2><%= list[:name] %></h2>
      <p><%= uncompleted_todos(list) %> / <%= total_todos(list) %></p>
    </a>
  </li>
<% end %>
</ul>

<% content_for :header_links do %>
  <a class="add" href="/lists/new">Add List</a>
<% end %>
